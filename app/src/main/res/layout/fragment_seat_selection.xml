<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.seat.SeatSelectionFragment">

    <TextView
        android:id="@+id/back_arrow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/baseline_arrow"
        android:backgroundTint="@color/light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cinema_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pt_root_ui_regular"
        android:text="Eurasia Cinema7"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_arrow_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_arrow_tv" />

    <TextView
        android:id="@+id/movie_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pt_root_ui_regular"
        android:text="The Batman"
        android:textColor="@color/light_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/cinema_title_tv"
        app:layout_constraintStart_toStartOf="@+id/cinema_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/cinema_title_tv" />

    <TextView
        android:id="@+id/extend_arrow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/enlarge"
        android:backgroundTint="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/pin_insert_shape"
        android:drawablePadding="4dp"
        android:fontFamily="@font/pt_root_ui_regular"
        android:text="April, 14"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_title_tv" />

    <TextView
        android:id="@+id/day_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/pin_insert_shape"
        android:drawablePadding="4dp"
        android:fontFamily="@font/pt_root_ui_regular"
        android:text="15:10"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/clock"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_time_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calendar_time_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>