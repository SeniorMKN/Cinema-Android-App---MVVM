<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="18dp"
        android:gravity="center">

        <TextView
            android:id="@+id/time_movie_start_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/pt_root_ui_regular"
            android:gravity="center"
            android:text="14:40"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quality_cinema_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/pt_root_ui_regular"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:text="Pyc"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:background="@color/light_grey" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cinema_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_root_ui_regular"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Eurasia Cinema7"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cinema_name_tv">

            <TextView
                android:id="@+id/adult_price_tv"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_root_ui_regular"
                android:text="2200 ₸"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/cinema_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/cinema_name_tv" />

            <TextView
                android:id="@+id/child_price_tv"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pt_root_ui_regular"
                android:text="1000 ₸"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/adult_price_tv"
                app:layout_constraintStart_toEndOf="@+id/adult_price_tv"
                app:layout_constraintTop_toTopOf="@+id/adult_price_tv" />

            <TextView
                android:id="@+id/student_price_tv"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pt_root_ui_regular"
                android:text="1500 ₸"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/child_price_tv"
                app:layout_constraintStart_toEndOf="@+id/child_price_tv"
                app:layout_constraintTop_toTopOf="@+id/child_price_tv" />

            <TextView
                android:id="@+id/vip_price_tv"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pt_root_ui_regular"
                android:text="5500 ₸"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/student_price_tv"
                app:layout_constraintStart_toEndOf="@+id/student_price_tv"
                app:layout_constraintTop_toTopOf="@+id/student_price_tv" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>