<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    tools:context=".ui.city.CityDialogFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/city_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_blue"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close_tv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/baseline_close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/light_grey" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/city_search_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="false"
                android:background="@drawable/pin_insert_shape"
                android:drawableStart="@drawable/baseline_search"
                android:drawablePadding="12dp"
                android:drawableTint="@color/light_grey"
                android:hint="Search"
                android:paddingVertical="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColorHint="@color/light_grey"
                android:textSize="16sp"
                app:cornerRadius="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/city_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginHorizontal="16dp"
                tools:itemCount="10"
                tools:listitem="@layout/recycler_city_layout" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/city_apply_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:backgroundTint="@color/orange"
                android:paddingVertical="16dp"
                android:paddingTop="10dp"
                android:text="Apply"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>