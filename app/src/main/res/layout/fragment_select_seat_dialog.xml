<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:paddingVertical="16dp"
    tools:context=".ui.select.SelectSeatDialogFragment">

    <LinearLayout
        android:id="@+id/ticket_type_linear_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/select_ticket_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/pt_root_ui_regular"
            android:text="Select ticket type"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/row_seat_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pt_root_ui_regular"
            android:text="8th row, 7th seat"
            android:textColor="@color/light_grey"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/adult_linear_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ticket_type_linear_ly">

        <TextView
            android:id="@+id/adult_ticket_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/pt_root_ui_regular"
            android:text="Adult"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/adult_ticket_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="3"
            android:fontFamily="@font/pt_root_ui_regular"
            android:gravity="end"
            android:text="2200 ₸"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:id="@+id/adult_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adult_linear_ly" />

    <LinearLayout
        android:id="@+id/child_linear_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adult_linear_ly">

        <TextView
            android:id="@+id/child_ticket_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/pt_root_ui_regular"
            android:text="Child"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/child_ticket_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="3"
            android:fontFamily="@font/pt_root_ui_regular"
            android:gravity="end"
            android:text="1000 ₸"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:id="@+id/child_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/child_linear_ly" />

    <LinearLayout
        android:id="@+id/student_linear_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/child_linear_ly">

        <TextView
            android:id="@+id/student_ticket_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/pt_root_ui_regular"
            android:text="Student"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/student_ticket_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="3"
            android:fontFamily="@font/pt_root_ui_regular"
            android:gravity="end"
            android:text="1500 ₸"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deselect_seat_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/pt_root_ui_regular"
        android:paddingVertical="16dp"
        android:text="Deselect this seat"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:backgroundTint="@color/light_blue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_linear_ly"
        app:rippleColor="@color/light_blue"
        app:strokeColor="@color/light_grey"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>