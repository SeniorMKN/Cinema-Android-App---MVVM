<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.absolute.cinema.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.absolute.cinema.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_tabsMovieFragment"
            app:destination="@id/tabsMovieFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/tabsMovieFragment"
        android:name="com.absolute.cinema.ui.tabs.TabsMovieFragment"
        android:label="fragment_movie_tabs"
        tools:layout="@layout/fragment_movie_tabs" >
        <action
            android:id="@+id/action_tabsMovieFragment_to_aboutMovieFragment"
            app:destination="@id/aboutMovieFragment" />
        <action
            android:id="@+id/action_tabsMovieFragment_to_sessionsMovieFragment"
            app:destination="@id/sessionsMovieFragment" />
        <action
            android:id="@+id/action_tabsMovieFragment_to_seatSelectionFragment"
            app:destination="@id/seatSelectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutMovieFragment"
        android:name="com.absolute.cinema.ui.about.AboutMovieFragment"
        android:label="fragment_about_movie"
        tools:layout="@layout/fragment_about_movie" />
    <fragment
        android:id="@+id/sessionsMovieFragment"
        android:name="com.absolute.cinema.ui.sessions.SessionsMovieFragment"
        android:label="fragment_sessions_movie"
        tools:layout="@layout/fragment_sessions_movie" />
    <fragment
        android:id="@+id/seatSelectionFragment"
        android:name="com.absolute.cinema.ui.seat.SeatSelectionFragment"
        android:label="fragment_seat_selection"
        tools:layout="@layout/fragment_seat_selection" >
        <action
            android:id="@+id/action_seatSelectionFragment_to_payFragment"
            app:destination="@id/payFragment" />
    </fragment>
    <fragment
        android:id="@+id/payFragment"
        android:name="com.absolute.cinema.ui.pay.PayFragment"
        android:label="fragment_pay"
        tools:layout="@layout/fragment_pay" >
        <action
            android:id="@+id/action_payFragment_to_ticketFragment"
            app:destination="@id/ticketFragment" />
    </fragment>
    <fragment
        android:id="@+id/ticketFragment"
        android:name="com.absolute.cinema.ui.ticket.TicketFragment"
        android:label="fragment_ticket"
        tools:layout="@layout/fragment_ticket" >
        <action
            android:id="@+id/action_ticketFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_ticketFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.absolute.cinema.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


</navigation>